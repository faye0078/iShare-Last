
.iconfont {
  font-family: "iconfont" !important;
  font-size: 32rpx;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-cha:before {
  content: "\e61a";
  color: red;
}

.title {
  font-size: 27rpx;
  color: #999
}

.top_title {
  font-size: 30rpx;
  width: 300rpx;
}
.container {
  background-color: white;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}
.content_title {
  font-size: 30rpx;
  width: 300rpx;
  margin-top: 40rpx;
  margin-left: 15rpx;
}


.intro {
  font-size: 27rpx;
  color: #999;
  margin: 40rpx;
}

.image_content {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 20rpx;
  justify-content: space-around;
}

.moment_img {
  width: 230rpx;
  height: 230rpx;
}

.image {
  position: relative;
}
.image image{
    width: 220rpx;
    height: 220rpx;
}
.cha {
  position: absolute;
  top: 0;
}

.bottom,
.bottom_item {
  margin-top: 20rpx;
  background-color: white;
  padding: 20rpx;
}

.message_user,
.message_category {
  display: flex;
  flex-direction: row;
}



.message_category {
  margin-top: 2rpx;
}


.wx-switch-input {
  width: 80rpx !important;
  height: 36rpx !important;
  background: #50D2C2 !important;
  border: #50d2c2 !important;
  /* 2018-07-18 重置开关边框颜色 */
}


/*白色样式（false的样式）*/

.wx-switch-input::before {
  width: 80rpx !important;
  height: 36rpx !important;
}

.wx-switch-input::after {
  width: 40rpx !important;
  height: 36rpx !important;
}

.submit {
  position: fixed;
  bottom: 0;
  width: 100%;
}

.main {
  text-align: center;
  font-size: 40rpx;
  padding: 20rpx;
  font-weight: 1000;
  color: white;
  background-color:rgb(65, 184, 49);
}